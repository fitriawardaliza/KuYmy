<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F12A2A"
    android:orientation="horizontal"
    android:padding="10dp">

    <ImageView
        android:layout_width="141dp"
        android:layout_height="103dp"
        android:src="@drawable/logo_kuymy" />
    <TextView
        android:id="@+id/nomor"
        android:layout_width="306dp"
        android:layout_height="wrap_content"
        android:paddingEnd="7dp"
        android:textColor="@color/black"
        android:textSize="23sp"
        android:textStyle="bold" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/floatingActionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="770dp"
        android:layout_marginEnd="29dp"
        android:backgroundTint="@color/white"
        android:clickable="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/ic_baseline_add_24" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"

        android:gravity="start"
        android:orientation="vertical"
        android:paddingStart="8dp">

        <TextView
            android:id="@+id/nim"
            android:layout_width="283dp"
            android:layout_height="12dp"
            android:layout_gravity="center"
            android:textSize="18sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="638dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="84dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/editButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:backgroundTint="#454141"
            android:focusable="false"
            android:onClick="Ubah"
            android:fontFamily="sans-serif-black"
            android:text="Ubah" />

        <Button
            android:id="@+id/deleteButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:backgroundTint="#454141"
            android:focusable="false"
            android:fontFamily="sans-serif-black"
            android:text="Hapus" />


    </LinearLayout>

    <Button
        android:id="@+id/editpesan"
        android:layout_width="224dp"
        android:layout_height="75dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_gravity="end"
        android:layout_marginEnd="109dp"
        android:layout_marginBottom="42dp"
        android:backgroundTint="#454141"
        android:focusable="false"
        android:fontFamily="sans-serif-black"
        android:onClick="Pesan"
        android:text="Pesan" />

    <TextView
        android:id="@+id/jurusan"
        android:layout_width="306dp"
        android:layout_height="53dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center"
        android:layout_marginEnd="104dp"
        android:layout_marginBottom="557dp"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/nama"
        android:layout_width="314dp"
        android:layout_height="59dp"
        android:layout_alignBottom="@+id/editpesan"
        android:layout_gravity="center"
        android:layout_marginBottom="418dp"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold" />


</RelativeLayout>